<h1>Костюми</h1>

<table>
  <tr>
    <th>Ід</th>
    <th>Назва</th>
    <th>Опис</th>
    <th>Частини</th>
    <th></th>
    <th></th>
  </tr>

  <% @costumes.each do |cst| %>
    <tr>
      <td><%= cst.id %></td>
      <td><%= cst.name %></td>
      <td><%= cst.description %></td>
      <td><%= cst.parts.map {|p| p.name} %></td>
      <td><%= link_to 'Показати', cst %></td>
      <td><%= link_to 'Редагувати', edit_costume_path(cst) %></td>

    </tr>
  <% end %>
</table>

